<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/degradado"
            android:paddingBottom="10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:src="@drawable/sin_t_tulo">
            </androidx.appcompat.widget.AppCompatImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metal_mania"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/app_name"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.5">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.9">
                            <ProgressBar
                                android:id="@+id/progress1"
                                android:layout_width="50dp"
                                android:layout_centerInParent="true"
                                android:layout_height="match_parent"
                                style="?android:progressBarStyleHorizontal"
                                android:indeterminate="true"
                                android:progressDrawable="@drawable/circular_verde"
                                />
                            <TextView
                                android:id="@+id/cant1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metal_mania"
                                android:visibility="invisible"
                                android:textSize="16dp"
                                android:text="0"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/metal_mania"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:text="@string/btn1"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="0.1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.9">
                            <ProgressBar
                                android:id="@+id/progress2"
                                android:layout_width="50dp"
                                android:layout_centerInParent="true"
                                android:layout_height="match_parent"
                                style="?android:progressBarStyleHorizontal"
                                android:indeterminate="true"
                                android:progressDrawable="@drawable/circular_amarilla"
                                />
                            <TextView
                                android:id="@+id/cant2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metal_mania"
                                android:visibility="invisible"
                                android:textSize="16dp"
                                android:text="0"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/metal_mania"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:text="@string/btn2"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="0.1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.5">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.9">
                            <ProgressBar
                                android:id="@+id/progress3"
                                android:layout_width="50dp"
                                android:layout_centerInParent="true"
                                android:layout_height="match_parent"
                                style="?android:progressBarStyleHorizontal"
                                android:indeterminate="true"
                                android:progressDrawable="@drawable/circular_roja"
                                />
                            <TextView
                                android:id="@+id/cant3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metal_mania"
                                android:visibility="invisible"
                                android:textSize="16dp"
                                android:text="0"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/metal_mania"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:text="@string/btn3"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="0.1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.9">
                            <ProgressBar
                                android:id="@+id/progress4"
                                android:layout_width="50dp"
                                android:layout_centerInParent="true"
                                android:layout_height="match_parent"
                                style="?android:progressBarStyleHorizontal"
                                android:indeterminate="true"
                                android:progressDrawable="@drawable/circular_roja"
                                />
                            <TextView
                                android:id="@+id/cant4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/metal_mania"
                                android:visibility="invisible"
                                android:textSize="16dp"
                                android:text="0"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/metal_mania"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:text="@string/btn4"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="0.1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>